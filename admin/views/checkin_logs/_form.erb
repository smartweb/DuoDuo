<% error = @checkin_log.errors.key?(:user_id) && @checkin_log.errors[:user_id].count > 0 %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :user_id, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :user_id, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:user_id) : "Ex: a simple text" %></span>
  </div>
</fieldset>
<% error = @checkin_log.errors.key?(:check_date) && @checkin_log.errors[:check_date].count > 0 %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :check_date, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :check_date, :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:check_date) : "Ex: a simple text" %></span>
  </div>
</fieldset>


<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:checkin_logs, :index), :class => 'btn btn-default' %>
</div>