   <div class="container">
   
   

   <ol class="breadcrumb">
      <li><a href="/">首页</a></li>
      <li class="active">登录</li>
  </ol>

  <div class="page-header">
    <h3>登录</h3>
  </div>

  <div class="list-group packages" id="login-box" style="padding:30px;">
   
  <% form_tag url(:base, :login), :class=>"login form-horizontal" do %>

  <%= password_field_tag :password1, :id => :password, :class => 'form-control', :value=>"12345" %>

   <div class="form-group">
   手机 <input type="text" name="mobile" class="form-control required"  data-msg="请输入手机">
   </div>
   <div class="form-group">
   密码 <input type="password" name="password" class="form-control required" data-msg="请输入密码">
   </div>
   <div class="form-group">
   <span class="label label-danger"></span>
   </div>
   <div class="form-group">
   <input type="submit" value="登录" class="btn btn-success"> 
   <a href="/signup" class="btn btn-default">注册</a>
   </div>
  <% end %>
  </div>

   </div>

   <script>
      $("form").validate();
    </script>