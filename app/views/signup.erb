   <div class="container">
   
   

   <ol class="breadcrumb">
      <li><a href="/">首页</a></li>
      <li><a href="/login">登录</a></li>
      <li class="active">注册</li>
  </ol>

  <div class="page-header">
    <h3>注册帐号 <small>注册即送50原力</small></h3>
  </div>


   <div class="list-group packages" id="login-box" style="padding:30px;">
   

   <% form_tag url(:base, :signup), :class=>"login form-horizontal" do %>

   <div class="form-group">
   <% if @inviter %>
      <span class="label label-warning"><%=@inviter.name%></span> 邀请你加入驾享链
   <% end %>
   </div>

   <div class="form-group">
   名字 <input type="text" class="form-control required" name="name"
    value="<%=session[:form][:name]%>"  data-msg="请输入名字">
   </div>
  <div class="form-group">
   手机 <input type="text" class="form-control required" name="mobile" value="<%=session[:form][:mobile]%>" data-msg="请输入手机">
  </div>
   <div class="form-group">
   密码 <input type="password" class="form-control required" name="password" 
   value="<%=session[:form][:password]%>" data-msg="请输入密码"></div>

   <div class="form-group">
    <span class="label label-danger"><%=session[:form][:msg]%></span> 
   </div>

   <input type="hidden" name="inviter" value="<%=@inviter ? @inviter.id : 0%>">
   <div class="form-group">

   <input type="submit" class="btn btn-success" value="注册"> 
   </div>
   <% end %>



  </div>
   </div>

     <script>
      $("form").validate();
    </script>